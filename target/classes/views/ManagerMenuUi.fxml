<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManagerMenuController">
   <children>
      <HBox spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox prefHeight="47.0" spacing="10.0">
                     <children>
                        <Label fx:id="foodBtn" onMouseClicked="#handleFood" text="Foods" textFill="GREY">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="8.0" top="8.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="beverageBtn" onMouseClicked="#handleBeverage" text="Beverages" textFill="GREY">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="8.0" top="8.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="dessertBtn" onMouseClicked="#handleDessert" text="Desserts" textFill="GREY">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="8.0" top="8.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="addOnsBtn" onMouseClicked="#handleAddons" text="Add-ons" textFill="GREY" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="8.0" top="8.0" />
                           </HBox.margin>
                        </Label>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <TextField layoutX="48.0" layoutY="11.0" promptText="Search" style="-fx-background-radius: 30;" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="8.0">
                                 <padding>
                                    <Insets left="30.0" />
                                 </padding>
                              </TextField>
                           </children>
                        </AnchorPane>
                        <JFXButton fx:id="addItemBtn" onAction="#handleAddItemBtn" prefWidth="70.0" style="-fx-background-color: orange;" text="Add Item" textFill="WHITE">
                           <HBox.margin>
                              <Insets top="8.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="refreshBtn" onAction="#handleRefreshBtn" prefWidth="70.0" style="-fx-background-color: orange;" text="Refresh" textFill="WHITE">
                           <HBox.margin>
                              <Insets right="5.0" top="8.0" />
                           </HBox.margin>
                        </JFXButton>
                     </children>
                  </HBox>
                  <TableView fx:id="menuTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="menuId" prefWidth="100.0" text="Menu ID" />
                      <TableColumn fx:id="menuName" minWidth="40.0" prefWidth="350.0" text="Menu Name" />
                        <TableColumn fx:id="menuPrice" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="menuCategory" prefWidth="170.0" text="Category" />
                    </columns>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <VBox maxWidth="400.0" minWidth="400.0" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <AnchorPane prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: ORANGE; -fx-background-radius: 20 20 0 0;">
                     <children>
                        <Label alignment="CENTER" layoutX="164.0" layoutY="22.0" text="Menu Item" textAlignment="CENTER" textFill="WHITE" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="15.0">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="65.0" />
                     </VBox.margin>
                  </AnchorPane>
                  <VBox fx:id="orderContainer" maxHeight="350.0" minWidth="350.0" prefHeight="350.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
