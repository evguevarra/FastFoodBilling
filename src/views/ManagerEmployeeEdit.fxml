<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManagerEmployeeEditController">
    <content>
        <AnchorPane>
            <children>
                <GridPane layoutX="24.0" layoutY="40.0" prefHeight="150.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="First Name" GridPane.halignment="CENTER" />
                        <Label text="Last Name" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <TextField fx:id="fnField" GridPane.columnIndex="1" />
                        <TextField fx:id="lnField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
